<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/main_white_faded"/>

    <RelativeLayout
        android:id="@+id/item_setup_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_xsmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/item_setup_kick">

        <TextView
            android:id="@+id/item_setup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/na_name"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/main_white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_setup_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/na_device"
            android:textColor="@color/main_white"
            android:textSize="@dimen/font_small"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/item_setup_kick"
        android:layout_width="@dimen/size_large"
        android:layout_height="@dimen/size_small"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="KICK"
        android:textStyle="bold"
        android:background="@color/main_neutral"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_white_faded"/>

</RelativeLayout>